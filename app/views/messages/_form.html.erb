<%= form_with url: messages_path, html: { id: "message_form", class: "mt-3" } do |f| %>
  <div class="container flex">
    <div class="flex-1">
      <%= f.text_area :message,
        class: "form-control w-100",
        placeholder: "your message",
        autofocus: true,
        data: { controller: "submit", "submit-target": "input" }
      %>
    </div>
    <div>
      <%= f.submit "Send"%>
    </div>
  </div>
<% end %>
