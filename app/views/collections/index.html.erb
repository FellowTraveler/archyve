<div class="flex">
  <%= render "shared/collection_list", collections: @collections %>

  <div id="collection_area" class="overflow-y-scroll flex-1 h-screen bg-secondary-200 dark:bg-secondary-950 flextext-gray-700 dark:text-secondary-200">
    <div class="container flex justify-center w-full align-center">
      <% if notice %>
        <p class="text-sm notice text-secondary-700"><%= notice %></p>
      <% elsif alert %>
        <p class="text-sm alert text-tertiary-700"><%= alert %></p>
      <% end %>
    </div>

    <%= turbo_stream_from "collection" %>
    <div class="m-2 h-full">
      <% if @chunks %>
        <%= render "shared/chunks", chunks: @chunks, selected_id: @chunk.id %>
      <% elsif @document %>
        <%= render @document %>
      <% elsif @collection %>
        <%= render @collection %>
      <% else %>
          <div class="container flex justify-center h-full align-center">
          <%= render "search/index", query: "" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
