<div id="collection" class="flex flex-col h-full">
  <div class="flex">
    <div class="flex-1 pb-2">
      <%= form_for @collection do |f| %>
        <%= f.text_field(
          :name,
          class: "rounded-md dark:bg-secondary-800",
          value: @collection.name,
          placeholder: "name",
          onchange: "this.form.submit()"
        )%>
        <%
          if @collection.documents.any?
            classes = "rounded-lg text-secondary-800 bg-secondary-200 dark:text-secondary-200 dark:bg-secondary-700 mr-2"
            disabled = true
          else
            classes = "rounded-lg text-secondary-800 bg-secondary-300 dark:text-secondary-200 dark:bg-secondary-800 mr-2"
            disabled = false
          end
        %>
        <%= f.collection_select(:embedding_model_id, embedding_model_list, :id, :name, {}, {
          class: classes,
          onchange: "this.form.submit()",
          disabled: disabled
        })%>
        <%= f.submit "Update", hidden: true %>
      <% end %>
    </div>
  </div>

  <div class="flex-1 flex flex-col items-center py-4 w-full">
    <div class="flex-1 flex flex-col flex-start w-3/4">
      <div class="py-4">
        <%= render "search_form", query: "" %>
      </div>
      <div id="<%= dom_id(@collection) %>-documents" class="flex-1">
        <% @collection.documents.order(:created_at).each do |document| %>
          <%= render "shared/document", document: %>
        <% end %>
      </div>

      <%= render "documents/form" %>
    </div>
  </div>
</div>
