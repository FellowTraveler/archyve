<% collection ||= @collection %>

<div id="<%= dom_id(collection) %>" class="flex flex-col h-full">
  <div class="flex flex-col items-center align-center">
    <div class="pb-2 items-center w-3/4">
      <div class="flex justify-center items-center pb-3">
        <div class="flex-1 items-center">
          <%= form_for collection do |f| %>
            <%= f.text_field(
              :name,
              class: "rounded-md bg-secondary-50 dark:bg-secondary-950 w-full",
              value: collection.name,
              placeholder: "name",
              onchange: "this.form.requestSubmit()"
            )%>
            <%= f.submit "Update", hidden: true %>
          <% end %>
        </div>
          <%= button_to "Reprocess", collection_reprocess_path(collection), class: "rounded-lg px-4 py-1 text-center text-secondary-100 dark:text-secondary-950 block font-medium bg-tertiary-600 dark:bg-tertiary-400 mx-2" %>
          <%= button_to "Stop jobs", collection_stop_path(collection), class: "rounded-lg px-4 py-1 text-center text-secondary-100 dark:text-secondary-950 block font-medium bg-tertiary-600 dark:bg-tertiary-400" %>
      </div>
      <% if collection.graph_enabled %>
        <div class="pb-6">
          <%= render "collections/state_tags", collection: %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex-1 flex flex-col items-center w-full">
    <div class="flex-1 flex flex-col flex-start w-3/4">
      <div class="py-4">
        <%= render "collections/search_form", query: "", locals: { collection: } %>
      </div>
      <div id="<%= dom_id(collection) %>-documents" class="flex-1">
        <% collection.documents.order(:created_at).each do |document| %>
          <%= render "shared/document", document: %>
        <% end %>
      </div>

      <%= render "documents/form", locals: { collection: } %>
    </div>
  </div>
</div>
