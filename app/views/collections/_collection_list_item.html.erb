<div id="<%= dom_id(collection) %>">
  <div class="container flex">
    <div class="flex-1 px-2 py-1 text-sm rounded-lg hover:bg-secondary-300 dark:hover:bg-secondary-700">
      <%= link_to "#{collection.name}", collection %>
    </div>
    <div class="text-secondary-300 dark:text-secondary-400">
      <%= collection.documents.count %>
    </div>
    <div class="flex-none mx-1">
      <%= button_to collection, method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}} do %>
        <i class="fa fa-trash"></i>
      <% end %>
    </div>
  </div>
</div>
