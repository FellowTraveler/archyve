<%= content_tag :div, id: dom_id(chunk), class: "flex-col justify-start items-start px-10 py-5 my-3 rounded-md shadow-lg bg-secondary-200 dark:bg-secondary-900" do %>
  <%= link_to collection_document_chunk_path(chunk.collection, chunk.document, chunk),
    class: "flex justify-start items-center px-3 mb-4 rounded-lg hover:bg-secondary-200 hover:dark:bg-secondary-700 w-full" do %>
    <div class="flex-1 whitespace-prewrap">
      <%= chunk.content %>
    </div>
    <div class="flex flex-col ms-4">
    </div>
  <% end %>
  <div class="flex justify-space-between w-full px-3">
    <div class="text-xs text-right text-secondary-400 hover:bg-secondary-200 hover:dark:bg-secondary-700 underline">
      <%= link_to chunk.collection.name, chunk.collection %>
    </div>
    <div class="flex-1 text-xs text-center text-secondary-400 underline">
      <%= link_to chunk.document.filename, collection_document_path(chunk.collection, chunk.document), class: "hover:bg-secondary-200 hover:dark:bg-secondary-700" %>
    </div>
    <div>
      <% if distance %>
        <div class="text-xs text-right text-secondary-400">distance: <%= distance.round(3) %></div>
      <% end %>
    </div>
  </div>
<% end %>
