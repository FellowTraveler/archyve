<%= form_with url: collection_documents_path(@collection), html: { id: "document_form", class: "mt-3 w-full" } do |f| %>
  <div class="flex justify-center">
    <div class="w-full bg-secondary-100 dark:bg-secondary-800 dark:border-secondary-400 border px-10 py-5 my-3 rounded-lg">
      <div class="pb-3 text-secondary-900 dark:text-secondary-100">Add document</div>
      <div class="flex">
        <%= f.file_field :file, class: "w-full pb-2" %>
        <%= f.submit "Upload Document", class: "rounded-lg px-2 py-1 text-center text-white dark:text-secondary-950 block font-medium bg-tertiary-700 dark:bg-tertiary-400"%>
      </div>
    </div>
  </div>
<% end %>