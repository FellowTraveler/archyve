<div id="search_multiple_form">
  <%= form_with url: search_path do |f| %>
    <div class="container flex flex-1">
      <%= f.text_area :query,
        placeholder: "Search your documents...",
        class: "rounded-md dark:bg-secondary-800 w-full flex-1",
        hidden: false,
        value: query,
        data: { controller: "submit", "submit-target": "input" }
      %>
      <div class="flex">
        <div>
          <%= link_to "Clear", searches_path, class: "rounded-lg px-4 py-1 text-center text-white align-baseline dark:text-secondary-950 block font-medium bg-secondary-700 dark:bg-secondary-400 ml-2" %>
        </div>
        <div>
          <%= f.submit "Search", class: "rounded-lg px-4 py-1 text-center text-white dark:text-secondary-950 block font-medium bg-tertiary-700 dark:bg-tertiary-400 ml-2" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
