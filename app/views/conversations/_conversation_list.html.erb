<div id="conversations" class="overflow-y-scroll p-5 w-64 h-screen bg-secondary-300 dark:bg-secondary-900 text-secondary-700 dark:text-secondary-100">
  <div class="container flex flex-col items-center h-full">
    <div class="pb-2 w-full font-mono text-2xl font-bold text-center"><%= link_to "ARCHYVE", root_path, class: "text-primary-800 dark:text-primary-400" %></div>
    <%= button_to "New conversation", conversations_path, class: "rounded-lg py-1 px-3 my-2 text-center text-primary-200 dark:text-primary-950 block font-medium bg-primary-800 dark:bg-primary-400", data: { turbo: false } %>
    <div class="flex-1">
      <% conversations.order(created_at: :desc).each do |conversation| %>
        <%= render "conversation_list_item", conversation: %>
      <% end %>
    </div>
    <div class="w-full text-sm font-bold text-center">
      <%= @current_user.email %>
    </div>
    <div class="w-full">
      <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "rounded-lg py-1 px-3 my-2 text-center text-tertiary-200 dark:text-secondary-950 block font-medium bg-tertiary-800 dark:bg-primary-400 w-full font-medium" %>
    </div>
    <div class="w-full">
      <%= link_to "Documents", "/collections", class: "rounded-lg py-1 px-3 text-center text-tertiary-200 block font-medium bg-tertiary-800 dark:text-secondary-950 dark:bg-tertiary-500", data: { turbo: false } %>
    </div>
  </div>
</div>
